@model AppUserLoginDTO

<form asp-action="Login" class="w-50 mx-auto mt-5 p-3 rounded shadow" method="post">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" asp-for="UserName">Kullanıcı Adı</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label" asp-for="Password">Şifre</label>
        <div class="col-sm-9">
            <input type="password" class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <input type="checkbox" class="form-check-input ml-1" asp-for="RememberMe" />
            <label class="form-check-label ml-4" asp-for="RememberMe">Beni Hatırla</label>
            <span class="float-right">Hesabınız yok mu? <a asp-controller="Home" asp-action="Register" class="btn btn-link">Üye Ol</a></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <button type="submit" class="btn btn-info">Giriş</button>
        </div>
    </div>
</form>

<hr />

<div class="mx-auto">
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-primary">Admin</a>
    <a asp-area="Member" asp-controller="Home" asp-action="Index" class="btn btn-primary">Member</a>
</div>