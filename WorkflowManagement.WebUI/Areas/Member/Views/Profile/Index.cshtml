@model AppUserListDTO

@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        @TempData["message"].ToString()
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form class="w-50 shadow p-3 mx-auto" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-sm-3" asp-for="FirstName">İsim</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="FirstName" value="@Model.FirstName" />
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3" asp-for="LastName">Soyisim</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="LastName" value="@Model.LastName" />
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3" asp-for="Email">E-Posta</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="Email" value="@Model.Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3" asp-for="UserName">E-Posta</label>
        <div class="col-sm-9">
            <input class="form-control" disabled asp-for="UserName" value="@Model.UserName" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Profil Fotoğrafı</label>
        <div class="col-sm-9 text-center">
            <div class="row">
                <div class="col-md-2">
                    Mevcut
                    <img src="~/img/@Model.Picture" style="width:4rem; height:4rem;" />
                </div>
                <div class="col-md-2 text-center" id="prevPic">
                    Yeni
                    <img src="" style="width:4rem; height:4rem;" id="currentPic" />
                </div>
                <div class="col-md-8">
                    <input type="file" class="form-control-file" name="pic" id="PPic" />
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#PPic").change(function (e) {
                $("#currentPic").attr("src", URL.createObjectURL(e.target.files[0]));
            })
        });

    </script>

}