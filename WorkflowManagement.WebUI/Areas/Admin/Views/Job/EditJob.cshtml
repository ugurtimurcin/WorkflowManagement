@model JobEditDTO

<h4 class="display-4 text-center my-3">Görev Düzenle</h4>
<form class="w-50 ml-4" asp-action="EditJob" method="post">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" asp-for="Title">Görev</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="Title" value="@Model.Title"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label" asp-for="Description">Açıklama</label>
        <div class="col-sm-9">
            <textarea class="form-control" asp-for="Description" value="@Model.Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label" asp-for="Description">Aciliyet Durumu</label>
        <div class="col-sm-9">
            <select class="form-control" asp-for="UrgencyId" asp-items="ViewBag.Urgencies">
                <option selected value="-1" disabled>Seçiniz</option>
            </select>
            <span asp-validation-for="UrgencyId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <a asp-controller="Job" asp-action="Index" class="btn btn-warning">Vazgeç</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>

        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}