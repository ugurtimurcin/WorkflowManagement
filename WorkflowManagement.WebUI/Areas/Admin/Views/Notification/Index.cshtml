@model List<NotificationListDTO>

<h4 class="display-4 text-center">Bildirimler</h4>

@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <div class="alert alert-success m-2 w-50 mx-auto">
            <form method="post" asp-action="Index" class="">
                <input type="hidden" name="id" value="@item.Id" />
                <p class="lead">
                    @item.Description
                    <button type="submit" class="btn btn-info btn-sm float-right">Okundu</button>
                </p>
            </form>
        </div>
    }
}
else
{
    <div class="alert alert-warning text-center m-2">
        Okunmamış bildiriminiz bulunmamaktadır.
    </div>
}

